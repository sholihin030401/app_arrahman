<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mutabaah.MutabaahFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/search_amalan"
        style="@style/MarginTextBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_textbox"
        android:fontFamily="@font/poppins_medium"
        android:hint="@string/cari_kader"
        android:padding="12dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/daftar_amalan_harian"
        android:textSize="17sp"
        android:textColor="@color/secondary"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_below="@id/search_amalan"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tx"
        tools:listitem="@layout/rvmutabaah_item"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="24dp"
        android:src="@drawable/ic_add"/>

</RelativeLayout>