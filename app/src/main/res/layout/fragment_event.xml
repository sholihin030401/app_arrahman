<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_layout"
    tools:context=".event.EventFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/search_event"
        style="@style/MarginTextBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_textbox"
        android:fontFamily="@font/poppins_medium"
        android:hint="@string/cari_kegiatan"
        android:padding="12dp"
        android:textSize="16sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_event"
        tools:listitem="@layout/rvevent_item" />

    <ProgressBar
        android:id="@+id/pb_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

</RelativeLayout>